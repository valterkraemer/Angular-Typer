html, body {
  margin: 0;
  padding: 0;
}

body {
  background: rgb(204,204,204);
  margin: 50px;
  
  &.A4 > .page {
    width: 21cm;
    height: 29.7cm;
    padding: 2cm;
  }

  > .page {
    background: white;
    display: block;
    margin: 0 auto;
    margin-bottom: 0.5cm;
    box-shadow: 0 0 0.5cm rgba(0,0,0,0.5);
    margin-bottom: 30px;

    > .inner {
      white-space:pre-line;
      height: 100%;
      width: 100%;

      .col-2 {
        column-count: 2;
        display: block
      }

      .justify {
        text-align: justify;
      }
    }
    
    > .page-number {
      text-align: center;
    }
  }
}

h1, h2, h3, h4, h5 {
  margin: 0;
}

img {
  max-height: 100%;
  max-width: 100%;
}

.col-2 .inner, {
  column-count: 2;
  display: block
}

@media print {
  .page.A4 {
    margin: 0;
    padding: 0;
    box-shadow: none;
  }
}
